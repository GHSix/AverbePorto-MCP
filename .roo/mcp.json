{
  "mcpServers": {
    "AverbePorto-MCP": {
      "command": "node",
      "args": [
        "/var/apps/AverbePorto-MCP/build/index.js"
      ],
      "env": {
        "AVERBEPORTO_USER": "${input:averbeporto-user}",
        "AVERBEPORTO_PASS": "${input:averbeporto-pass}"
      },
      "disabled": false,
      "alwaysAllow": [
        "login",
        "consultProtocol",
        "upload",
        "retrieveDocument",
        "decomposeKey"
      ]
    }
  }
}